{
    "name": "scato/phpeg",
    "description": "PEG Parser Generator",
    "version": "0.2.2",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": ">=5.3.0",
        "symfony/console": "~2.1"
    },
    "require-dev": {
        "phpspec/phpspec": "~2.0",
        "behat/behat": "2.4.*@stable",
        "phpunit/phpunit": "3.7.*"
    },
    "config": {
        "bin-dir": "bin"
    },
    "bin": ["bin/phpeg"],
    "autoload": {
        "psr-0": {
